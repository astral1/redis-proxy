#!/usr/bin/env ruby
ROOT_PATH = File.expand_path('..', File.dirname(__FILE__))

# for debugging
# remove after gem installation
$:.unshift(File.join(ROOT_PATH, 'lib'))

require 'redis-proxy'

EM::epoll
EM::kqueue
EM::run do
  Signal.trap('INT') { EM::stop }
  Signal.trap('TERM') { EM::stop }
  EM::start_server('0.0.0.0', 6389, RedisFrontend)
end
